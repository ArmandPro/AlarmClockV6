<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anim_two"
    android:id="@+id/my_layout_state"
    tools:context="com.example.etudes.alarmclockv6.StateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_dev"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/happymoon" />

            <TextView
                android:id="@+id/textViewHi_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_end_color"
                android:text="Hi you! nice to meet you this evening"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewClock_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:text="No alarm programmed"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewComment_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:text="You last night was good!"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textSize="36sp" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
