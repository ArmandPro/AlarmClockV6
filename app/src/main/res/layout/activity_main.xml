<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anim"
    android:id="@+id/my_layout"
    tools:context="com.example.etudes.alarmclockv6.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black_overlay"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Test simple alarm "
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="395dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Test Night Receiver" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Setup a week" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Ask me if I'm late" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Game" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Test go to bed receiver" />

            <Button
                android:id="@+id/successButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="Successes" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="334dp"
                android:headerBackground="@color/cardview_shadow_start_color"
                android:numbersSelectorColor="@color/com_facebook_blue"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="61dp" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
